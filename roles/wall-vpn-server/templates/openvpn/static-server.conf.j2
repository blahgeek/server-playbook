bind
lport {{ openvpn.server_listen_port }}
dev tun

ifconfig {{ '192.168.0.0/16' | ansible.netcommon.ipsubnet(24, vpn_subnet_id) | ansible.netcommon.nthhost(1) }} {{ '192.168.0.0/16' | ansible.netcommon.ipsubnet(24, vpn_subnet_id) | ansible.netcommon.nthhost(2) }}
ifconfig-ipv6 {{ ipv6_prefix | ansible.netcommon.ipsubnet(64, ipv6_vpn_subnet_id) | ansible.netcommon.nthhost(1) }} {{ ipv6_prefix | ansible.netcommon.ipsubnet(64, ipv6_vpn_subnet_id) | ansible.netcommon.nthhost(2) }}

route 192.168.0.0 255.255.0.0
route 100.64.0.0 255.192.0.0
route-ipv6 {{ yikai_net.home_prefix }} {{ ipv6_prefix | ansible.netcommon.ipsubnet(64, ipv6_vpn_subnet_id) | ansible.netcommon.nthhost(2) }}

secret static.key
# 128bit, faster
cipher AES-128-CBC

fragment 1300
mssfix
