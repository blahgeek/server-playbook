router id {{ ansible_default_ipv4.address }};

protocol kernel {
  scan time 60;
  import none;
#  export all;   # Actually insert routes into the kernel routing table
}

protocol device {
  scan time 60;
}

protocol static {
  # use blackhole because we would configure the routes manually
{% if vpn_ipv6_subnet is defined %}
{% if home_ipv6_subnet is defined %}
  route {{ home_ipv6_subnet }} blackhole;
{% endif %}
  route {{ vpn_ipv6_subnet }} blackhole;
{% endif %}
}

{% for name, value in bgp.items() %}

protocol bgp {{ name }} {
  local as {{ my_asn }};
  # no source address. rely on route table to select source. this simplifies the configuration
  import none;
{% if value.export_filter is defined %}
  export filter {
    {{ value.export_filter }}
  };
{% else %}
  export all;
{% endif %}
  graceful restart on;
  neighbor {{ value.peer_addr }} as {{ value.peer_asn }};
  # TODO: multihop
  # TODO: password
}

{% endfor %}
